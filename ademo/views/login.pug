extends layout

block content
  h4 Please login
  
  div(class="")= tips
  form(
    action="./login"
    method="post"
  )
    i(
      class="bi bi-person"
    )
    input(
      type="text"
      name="username"
      id="username"
      placeholder="Username"
    )
    label(
      for="passsword"
    ) Password:
    input(
      type="password"
      name="password"
      id="password"
      placeholder="Password"
    )
    input(
      type="submit"
      value="Login"
    )